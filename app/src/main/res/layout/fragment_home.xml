<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.Fragment.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_home"
            android:layout_height="270dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Covid 19"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/light_white"
                    android:textSize="20sp">

                </TextView>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Apa Kamu Merasa Sakit ?"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_width="300dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/tab_indicator_gray"
                    android:textSize="15sp"
                    android:text="Segera Periksakan Ke dokter terdekat Atau bisa Click DIbawah Ini"
                    android:layout_height="wrap_content">

                </TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/bg_bottomnavigation"
                        android:backgroundTint="#FF4B58"
                        android:drawableLeft="@drawable/ic_call"
                        android:text="Call Now"
                        android:textAllCaps="false"
                        app:backgroundTint="#F44336">

                    </Button>


                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="550dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/sicks">

                    </ImageView>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="Pencegahan"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgcuci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/cucitangan">

                </ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/circle"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/masker"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                </ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/circle"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/socialdistance">

                </ImageView>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/circle"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/healthyfood">

                </ImageView>

            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">



            <TextView
                android:layout_width="100dp"
                android:text="Sering Cuci Tangan"
                android:textAlignment="center"
                android:textColor="@color/bg"
                android:textSize="10sp"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:text="Gunakan Masker"
                android:textSize="11sp"
                android:textAlignment="center"
                android:textColor="@color/bg"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:textColor="@color/bg"
                android:text="Menghindari Kerumunan"
                android:textAlignment="center"
                android:textSize="10sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:text="Makan Makan Sehat"
                android:textAlignment="center"
                android:textSize="10sp"
                android:textColor="@color/bg"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="Bantuan"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="50dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <!--Put CardView Deisgn Here-->

                    <LinearLayout
                        android:layout_width="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/bg_button_bantuan"
                        android:layout_height="42dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/ic_local_hospital_24"
                            android:layout_height="40dp">
                        </ImageView>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="Rumah Sakit"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/light_white"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <!--Put Design CardView Here-->

                    <LinearLayout
                        android:layout_width="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/bg_konsultasi"
                        android:layout_height="42dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/ic__contacts"
                            android:layout_height="40dp">
                        </ImageView>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="Konsultasi"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/light_white"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="50dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <!--Put CardView Deisgn Here-->

                    <LinearLayout
                        android:layout_width="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/bg_menu_obat"
                        android:layout_height="42dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/ic_pills"
                            android:layout_height="40dp">
                        </ImageView>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="Vaksinasi"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/light_white"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <!--Put Design CardView Here-->

                    <LinearLayout
                        android:layout_width="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/bg_menu_information"
                        android:layout_height="42dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/ic_information"
                            android:layout_height="40dp">
                        </ImageView>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="Informasi"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/light_white"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
